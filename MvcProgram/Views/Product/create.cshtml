@model MvcProgram.Models.Product

@{
    ViewBag.Title = "新增商品";
}

<div class="full-center">
    <div class="form-box card shadow-sm border-0 p-4">
        <h1 class="text-center text-primary fw-bold mb-4">@ViewBag.Title</h1>

        @Html.AntiForgeryToken()

        @using (Html.BeginForm("CreateToUser", "Product", FormMethod.Post))
        {
            <div class="mb-3">
                @Html.Label("商品名稱", "", new { @class = "form-label fw-semibold" })
                @Html.TextBox("Name", null, new { @class = "form-control", required = "required", placeholder = "請輸入商品名稱" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.Label("價格","", new { @class = "form-label fw-semibold" })
                @Html.TextBox("price", null, new { @class = "form-control", required = "required", placeholder = "請輸入商品價格" })
            </div>

            <div class="mb-3">
                @Html.Label("商品描述", "" ,new { @class = "form-label fw-semibold" })
                @Html.TextBox("Description", null, new { @class = "form-control", required = "required", placeholder = "請輸入商品描述" })
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary">
                    ⬅ 返回主頁
                </a>
                <input type="submit" value="提交" class="btn btn-success" />
            </div>
        }
    </div>
</div>
