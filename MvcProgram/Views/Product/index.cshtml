@model IEnumerable<MvcProgram.Models.Product>

@{
    ViewData["Title"] = "商品列表";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-5 text-primary fw-bold">商品列表</h1>
        <p class="text-muted">管理你的商品：新增、編輯、刪除、查看詳情</p>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-secondary">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                        <th>@Html.DisplayNameFor(model => model.First().price)</th>
                        <th class="text-center">操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.price) 元</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.ProductID" class="btn btn-sm btn-warning me-2">
                                    編輯
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ProductID" class="btn btn-sm btn-danger me-2">
                                    刪除
                                </a>
                                <a asp-action="Detail" asp-route-id="@item.ProductID" class="btn btn-sm btn-info text-white">
                                    詳情
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="text-end">
                <a asp-action="Create" class="btn btn-primary">
                    ➕ 新增商品
                </a>
            </div>
        </div>
    </div>
</div>
